<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F9F9F9">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp"> <!-- Padding bawah biar gak ketutup navbar -->

        <!-- 1. HEADER (Lokasi & Profil) -->
        <TextView
            android:id="@+id/tvLocationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLocationValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta, Indonesia"
            android:textColor="#212121"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvLocationLabel"
            app:layout_constraintStart_toStartOf="@id/tvLocationLabel" />

        <!-- Ikon Notifikasi (Dummy) -->
        <ImageView
            android:id="@+id/btnNotif"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:src="@android:drawable/ic_popup_reminder"
            app:tint="#212121"
            android:background="#E0E0E0"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@id/tvLocationValue"
            app:layout_constraintTop_toTopOf="@id/tvLocationLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 2. SEARCH BAR -->
        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="24dp"
            android:background="@android:drawable/editbox_background_normal"
            android:hint="Search address, city, location"
            android:paddingStart="16dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="12dp"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvLocationValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 3. KATEGORI (Scroll Horizontal) -->
        <HorizontalScrollView
            android:id="@+id/scrollCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:scrollbars="none"
            android:paddingStart="24dp"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/etSearch">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Contoh Item Statis (Nanti bisa didinamiskan) -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="House"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#212121"
                    android:textColor="#FFFFFF" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apartment"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#757575" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hotel"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#757575" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Villa"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#757575" />
            </LinearLayout>
        </HorizontalScrollView>

        <!-- 4. SECTION HEADER "Near from you" -->
        <TextView
            android:id="@+id/tvSectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Near from you"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@id/scrollCategories"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See more"
            android:textColor="#757575"
            android:layout_marginEnd="24dp"
            app:layout_constraintBaseline_toBaselineOf="@id/tvSectionTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 5. RECYCLER VIEW (Grid Gambar) -->
        <!-- nestedScrollingEnabled="false" PENTING karena ada di dalam NestedScrollView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHouseList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:nestedScrollingEnabled="false"
            app:layout_constraintTop_toBottomOf="@id/tvSectionTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:listitem="@layout/item_house"
            tools:itemCount="4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>